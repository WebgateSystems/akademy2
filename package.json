{
  "name": "app",
  "private": true,
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css": "sass ./app/assets/stylesheets/application.sass.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "watch": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --watch",
    "watch:css": "sass --watch ./app/assets/stylesheets/application.sass.scss:./app/assets/builds/application.css --load-path=node_modules"
  },
  "devDependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "esbuild": "^0.21.5",
    "sass": "^1.77.8"
  },
  "packageManager": "yarn@3.2.0+sha512.bf8d01800977bb37695aa3a90c4ca70819b727165d8cc5dcc72a4de68d038bb38f49366f779fd2f9bd87f2e42ca70b1b5baefdce8ef4339459448be943d9265e"
}
