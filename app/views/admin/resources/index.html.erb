<div class="d-flex justify-content-between align-items-center mb-3">
  <h2><%= params[:resource].to_s.titleize %></h2>
  <%= link_to 'Nowy', admin_new_resource_path(resource: params[:resource]), class: 'btn btn-primary' %>
  </div>

<div class="table-responsive">
  <table class="table table-striped align-middle">
    <thead>
      <tr>
        <% @resource_class.columns.first(6).each do |col| %>
          <th><%= col.name.titleize %></th>
        <% end %>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <% @resource_class.columns.first(6).each do |col| %>
            <td><%= record.public_send(col.name) %></td>
          <% end %>
          <td class="text-end">
            <%= link_to 'Pokaż', admin_resource_path(resource: params[:resource], id: record.id), class: 'btn btn-sm btn-outline-secondary' %>
            <%= link_to 'Edytuj', admin_edit_resource_path(resource: params[:resource], id: record.id), class: 'btn btn-sm btn-outline-primary' %>
            <%= link_to 'Usuń', admin_destroy_resource_path(resource: params[:resource], id: record.id), data: { turbo_method: :delete, turbo_confirm: 'Na pewno?' }, class: 'btn btn-sm btn-outline-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


