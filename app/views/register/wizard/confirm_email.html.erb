<section class="auth-card auth-card--compact" aria-labelledby="verify-account-title">

  <a class="auth-back-link" href="<%= register_set_pin_confirm_path %>"
     aria-label="Back to digit code">
    <%= image_tag "icons/social/M/back.svg",
          width: 20,
          height: 20,
          alt: "",
          data: { theme_icon: true } %>
  </a>

  <header class="auth-card__header">
    <h1 id="verify-account-title">Verify your account</h1>

    <p>
      We’ve sent a confirmation link to
      <strong><%= @user_email %></strong>.
      Open your inbox and click the link to finish signing up.
    </p>

    <p>Don’t see it? Check your spam folder.</p>
  </header>

  <div class="confirm-email" aria-label="Verify account confirmation">
    <%= link_to "Next",
                authenticated_root_path,
                class: "auth-submit auth-submit--primary" %>
  </div>
</section>

