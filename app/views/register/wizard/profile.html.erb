
<section class="auth-card" aria-labelledby="auth-card-title">
  <header class="auth-card__header">
    <h1 id="auth-card-title">Create an Account</h1>
  </header>

  <%= form_with model: @form, url: register_profile_path, method: :post, html: { class: "auth-form" } do |f| %>

    <!-- First name -->
    <label>
      <span>First name</span>
      <%= f.text_field :first_name,
            placeholder: "First name",
            class: @form.errors[:first_name].present? ? "error-input" : "" %>
      <% if @form.errors[:first_name].present? %>
        <div class="field-error"><%= @form.errors[:first_name].first %></div>
      <% end %>
    </label>

    <!-- Last name -->
    <label>
      <span>Last name</span>
      <%= f.text_field :last_name,
            placeholder: "Last name",
            class: @form.errors[:last_name].present? ? "error-input" : "" %>
      <% if @form.errors[:last_name].present? %>
        <div class="field-error"><%= @form.errors[:last_name].first %></div>
      <% end %>
    </label>

    <!-- Date of birth -->
    <label>
      <span>Date of birth</span>
      <%= f.text_field :birthdate,
            placeholder: "DD.MM.YYYY",
            inputmode: "numeric",
            class: @form.errors[:birthdate].present? ? "error-input" : "" %>
      <% if @form.errors[:birthdate].present? %>
        <div class="field-error"><%= @form.errors[:birthdate].first %></div>
      <% end %>
    </label>

    <!-- Email -->
    <label>
      <span>Email</span>
      <%= f.email_field :email,
            placeholder: "example@mail.com",
            class: @form.errors[:email].present? ? "error-input" : "" %>
      <% if @form.errors[:email].present? %>
        <div class="field-error"><%= @form.errors[:email].first %></div>
      <% end %>
    </label>

    <!-- Phone -->
    <label>
      <span>Phone</span>
      <%= f.text_field :phone,
            placeholder: "+48 XXX XXX XXX",
            class: @form.errors[:phone].present? ? "error-input" : "" %>
      <% if @form.errors[:phone].present? %>
        <div class="field-error"><%= @form.errors[:phone].first %></div>
      <% end %>
    </label>

    <!-- Marketing -->
    <label class="auth-checkbox">
      <%= f.check_box :marketing %>
      <span>
        By providing my email I agree to receive communications from Academy 2.0.
        I understand I can opt out at any time.
      </span>
    </label>

    <!-- Button -->
    <button class="auth-submit" type="submit">Create account</button>

  <% end %>
</section>
