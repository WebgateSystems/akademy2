      .container{max-width:1200px; margin-inline:auto; padding:clamp(16px,2vw,24px)}
      header{position:sticky; top:0; backdrop-filter:saturate(180%) blur(8px); background:color-mix(in oklab, var(--bg) 85%, transparent); border-bottom:1px solid var(--card-border); z-index:50}
      .row{display:flex; gap:24px; align-items:center; justify-content:space-between}
      a{color:inherit; text-decoration:none}
      .brand{display:flex; align-items:center; gap:12px; font-weight:800; letter-spacing:.2px}
