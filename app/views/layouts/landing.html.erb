      .ghost{background:transparent; border:1px solid var(--card-border)}
      .hero{padding:clamp(32px,5vw,72px) 0}
      .hero h1{font-size:clamp(32px,6vw,64px); line-height:1.05; margin:0 0 16px}
      .hero p{font-size:clamp(18px,2.5vw,22px); color:var(--muted); margin:0 0 28px; max-width:52ch}
