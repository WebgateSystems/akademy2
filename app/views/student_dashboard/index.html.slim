.dashboard-app data-dashboard-app="" data-student-dashboard="true"
  = render 'student_dashboard/sidebar'

  main.dashboard-main
    = render 'student_dashboard/top_bar'

    - if @classes.any?
      / Student has approved classes - show learning content
      section.class-results aria-label="Twoje przedmioty"
        h2 Twoje przedmioty
        .class-results__grid data-subjects-grid=""
          - if @subjects.any?
            - colors = %w[blue green yellow pink orange purple lime]
            - @subjects.each_with_index do |subject, index|
              - stats = @subject_results&.dig(subject.id) || {}
              - completion = stats[:completion_rate] || 0
              - average_score = stats[:average_score] || 0
              - is_completed = completion >= 80
              - color_class = colors[index % colors.length]
              - subject_color = subject.color_light.presence || '#6366f1'
              - card_class = is_completed ? 'class-result--completed' : "class-result--#{color_class}"
              = link_to student_subject_path(subject), class: "class-result #{card_class}", data: { subject_id: subject.id }
                - if is_completed
                  span.class-result__progress.class-result__progress--colored data-subject-progress=subject.id style="background: #{subject_color}; border-color: #{subject_color};"
                    = "#{average_score}%"
                - else
                  span.class-result__progress data-subject-progress=subject.id = "#{completion}%"
