.dashboard-app data-dashboard-app="" data-student-dashboard="true"
  = render 'student_dashboard/sidebar'

  main.dashboard-main
    header.dashboard-top-bar
      button.dashboard-sidebar-toggle type="button" aria-label="Przełącz nawigację" data-sidebar-toggle=""
        = image_tag 'icons/social/M/burger.svg', width: 24, height: 24, data: { theme_icon: true }
      .dashboard-top-heading
        = link_to public_home_path, class: 'dashboard-back-link', aria: { label: 'Powrót do przedmiotów' }
          = image_tag 'icons/social/M/back.svg', width: 24, height: 24, data: { theme_icon: true }
        h1 = @subject.title
      .dashboard-top-actions
        = render 'student_dashboard/top_actions'

    section.video-grid-section aria-label="Moduły kursu"
      - @units.each do |unit|
        - if unit.learning_modules.where(published: true).any?
          h2.unit-title = unit.title
          .video-grid
            - unit.learning_modules.where(published: true).order(:order_index).each do |lm|
              - result = @module_results[lm.id]
              - completed = result&.passed
              article.video-card class=("video-card--completed" if completed)
                = link_to student_module_path(lm), class: 'video-card__thumbnail'
                  - if completed
                    .video-card__badge ✓
                  = image_tag 'icons/social/L/video.svg', alt: ''
                .video-card__content
                  h3.video-card__title = lm.title
                  p.video-card__description
                    - if completed
                      = "Ukończono: #{result.score}%"
                    - else
                      = "#{lm.contents.count} materiałów"

    = render 'shared/app_version'

css:
  .unit-title {
    font-size: 18px;
    font-weight: 600;
    margin: 24px 0 16px;
    color: var(--content-primary);
  }

  .unit-title:first-of-type {
    margin-top: 0;
  }

  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
    margin-bottom: 32px;
  }

  .video-card {
    background: var(--surface-primary);
    border: 1px solid var(--border-muted);
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .video-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .video-card--completed {
    border-color: var(--state-success);
  }

  .video-card__thumbnail {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 16/9;
    background: var(--surface-secondary);
    text-decoration: none;
  }

  .video-card__thumbnail img {
    width: 64px;
    height: 64px;
    opacity: 0.5;
  }

  .video-card__badge {
    position: absolute;
    top: 12px;
    right: 12px;
    width: 28px;
    height: 28px;
    background: var(--state-success);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: 600;
  }

  .video-card__content {
    padding: 16px;
  }

  .video-card__title {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 4px;
    color: var(--content-primary);
  }

  .video-card__description {
    font-size: 14px;
    color: var(--content-secondary);
    margin: 0;
  }

  .video-grid-section {
    padding: 24px;
  }

