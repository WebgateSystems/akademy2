<div class="container d-flex align-items-center justify-content-center min-vh-100 py-5">
  <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">
    <div class="text-center mb-4">
      <a href="/" class="text-decoration-none">
        <span class="fs-4 fw-bold text-body">Akademy Admin</span>
      </a>
      <div class="text-muted">Zaloguj się do panelu administracyjnego</div>
    </div>

    <div class="card shadow-sm">
      <div class="card-body p-4 p-md-5">
        <h1 class="h4 mb-3">Logowanie</h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, 'Email', class: 'form-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'name@school.edu' %>
          </div>

          <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center">
              <%= f.label :password, 'Hasło', class: 'form-label' %>
              <% if devise_mapping.recoverable? %>
                <%= link_to t('devise.shared.links.forgot_your_password', default: 'Nie pamiętasz hasła?'), new_password_path(resource_name), class: 'small' %>
              <% end %>
            </div>
            <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: '••••••••' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: 'form-check-input', id: 'remember_me' %>
              <%= f.label :remember_me, 'Zapamiętaj mnie', class: 'form-check-label' %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit 'Zaloguj się', class: 'btn btn-primary' %>
          </div>
        <% end %>

        <div class="mt-3">
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>

    <div class="text-center text-muted small mt-3">© <%= Time.current.year %> Akademy</div>
  </div>
</div>


